      "manipulators": [
        {
          "from": {
            "key_code": "8",
            "modifiers": {
              "mandatory": ["left_control", "left_option", "left_shift"]
            }
          },
          "to": [
            {
              "consumer_key_code": "fast_forward"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ],
  "title": "Legacy Configs"
}
