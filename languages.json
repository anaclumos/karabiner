{
  "title": "Multilingual Input Methods",
  "rules": [
    {
      "description": "R Command to Gureum Han2",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_command",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "select_input_source": {
                "input_source_id": "org.youknowone.inputmethod.Gureum.han2"
              }
            }
          ]
        }
      ]
    },
    {
      "description": "L Command to Gureum Roman",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "select_input_source": {
                "input_source_id": "org.youknowone.inputmethod.Gureum.system"
              }
            }
          ]
        }
      ]
    },
    {
      "description": "L Command to English",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "select_input_source": {
                "language": "^en$"
              }
            }
          ]
        }
      ]
    }
  ]
}
