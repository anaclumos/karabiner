{
  "title": "Hyper Key Combinations",
  "rules": [
    {
      "description": "Use Hyper + D to F13",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": [
                "left_shift",
                "left_control",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "f13"
            }
          ]
        }
      ]
    },
    {
      "description": "Use Hyper + E to control + up_arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": [
                "left_shift",
                "left_control",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Use Hyper + C to Fn + C",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "mandatory": [
                "left_shift",
                "left_control",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": [
                "fn"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Use Hyper + 9 to Brightness Down",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "9",
            "modifiers": {
              "mandatory": [
                "left_shift",
                "left_control",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "display_brightness_decrement"
            }
          ]
        }
      ]
    },
    {
      "description": "Use Hyper + 0 to Brightness Up",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "0",
            "modifiers": {
              "mandatory": [
                "left_shift",
                "left_control",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "display_brightness_increment"
            }
          ]
        }
      ]
    },
    {
      "description": "Use Hyper + (-) to Sound Down",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "mandatory": [
                "left_shift",
                "left_control",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "volume_decrement"
            }
          ]
        }
      ]
    },
    {
      "description": "Use Hyper + (+) to Sound Up",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "equal_sign",
            "modifiers": {
              "mandatory": [
                "left_shift",
                "left_control",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "volume_increment"
            }
          ]
        }
      ]
    }
  ]
}